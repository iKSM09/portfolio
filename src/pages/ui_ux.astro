---
import Base from "../layouts/Base.astro";

import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import Image from "../components/Image.astro";

import Buzz09Img from "../assets/projects/buzz09_preview-01.png";
import BrandnamaImg from "../assets/projects/brandnama_preview-01.png";
import HarleyImg from "../assets/projects/harley_preview-01.png";
import HaxarImg from "../assets/projects/haxar_preview-01.png";

const projects = [
  {
    name: "Buzz09",
    image: Buzz09Img,
    url: "https://www.buzz09.com/",
  },
  {
    name: "Brandnama",
    image: BrandnamaImg,
    url: "https://www.brandnama.in/",
  },
  {
    name: "Harley Pathlabs",
    image: HarleyImg,
    url: "http://www.harleypathlabs.com/",
  },
  {
    name: "Haxar Insurance",
    image: HaxarImg,
    url: "https://www.haxarinsurance.com/",
  },
];
---

<Base>
  <Navigation title="KUNAL SHARMA" />

  <Hero>
    <h1 class="text-3xl font-bold">
      Hi there, I'm <span
        class="bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-transparent"
        >Kunal</span
      > ðŸ‘‹
    </h1>

    <p class="mt-5 text-xl leading-8">
      Passionate UI/UX designer and front-end developer with experience in
      designing and developing user-friendly interfaces for both web and mobile.
      Proven ability to create visually appealing and functionally efficient
      designs that meet user needs. Skilled in HTML, CSS, JavaScript, React, and
      TypeScript.
    </p>
    <p class="mt-5 text-xl leading-8">
      I have a strong understanding of user-centered design principles and a
      keen eye for detail. I am also proficient in user research, wireframing,
      prototyping, and visual design. I am always willing to learn new skills
      and technologies, and I am passionate about creating user-friendly
      experiences that make a difference in people's lives.
      <!-- <a class="text-cyan-400 hover:underline" href="/"></a> -->
    </p>
  </Hero>

  <Projects>
    <div
      id="img-gallery"
      class="container w3-screen grid grid-cols-1 gap-5 sm:grid-cols-2 md:grid-cols-3"
    >
      {
        projects.map((project) => (
          <div class="aspect-square hover:translate-y-1">
            <Image
              name={project.name}
              image={project.image}
              url={project.url}
            />
          </div>
        ))
      }
    </div>
  </Projects>
</Base>
