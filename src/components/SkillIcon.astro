---
import { Icon } from "astro-icon";

const { name, icon } = Astro.props;
---

<span
  class="w-28 h-28 rounded-md flex flex-col justify-between items-center bg-slate-800 hover:translate-y-1"
>
  <span class="flex items-center justify-center h-20 w-20 p-3">
    <Icon class="w-full h-full" name={icon} />
  </span>
  <p class="mb-2 text-sm font-semibold">{name}</p>
</span>
