---
import ImageSlider from "./ImageSlider";
const { name, path, images, url } = Astro.props;
---

<div class="aspect-square bg-slate-700 rounded-lg hover:translate-y-1">
  <ImageSlider client:only="react" name={name} images={images} url={url} />
  <div class="flex justify-between align-middle p-2">
    <h3 class="text-xl font-bold">{name}</h3>
    <a
      href={`designer/${path}`}
      target="_blank"
      class="hover:cursor-pointer hover:text-blue-300 hover:underline"
    >
      Details
    </a>
  </div>
</div>
